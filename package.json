{
  "name": "@profpowell/browser-window",
  "version": "1.0.0",
  "description": "A Safari-style browser window web component for demos and tutorials",
  "type": "module",
  "main": "dist/browser-window.js",
  "module": "dist/browser-window.js",
  "types": "dist/browser-window.d.ts",
  "exports": {
    ".": {
      "types": "./dist/browser-window.d.ts",
      "import": "./dist/browser-window.js",
      "default": "./dist/browser-window.js"
    }
  },
  "files": [
    "dist",
    "src",
    "custom-elements.json"
  ],
  "scripts": {
    "build": "npm run build:js && npm run build:types",
    "build:js": "esbuild src/browser-window.js --bundle --format=esm --outfile=dist/browser-window.js && esbuild src/browser-window.js --bundle --format=esm --minify --outfile=dist/browser-window.min.js",
    "build:types": "tsc",
    "dev": "vite",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.js\" \"demos/**/*.html\"",
    "format:check": "prettier --check \"src/**/*.js\" \"demos/**/*.html\"",
    "test": "web-test-runner",
    "test:watch": "web-test-runner --watch",
    "analyze": "cem analyze",
    "prepublishOnly": "npm run build && npm run analyze"
  },
  "customElements": "custom-elements.json",
  "keywords": [
    "web-component",
    "browser-window",
    "demo",
    "tutorial",
    "custom-element"
  ],
  "author": "ProfPowell",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ProfPowell/browser-window.git"
  },
  "dependencies": {
    "@profpowell/code-block": "github:ProfPowell/code-block#v2.0.1"
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.11.0",
    "@eslint/js": "^9.39.2",
    "@esm-bundle/chai": "^4.3.4-fix.0",
    "@open-wc/testing": "^4.0.0",
    "@web/test-runner": "^0.20.2",
    "esbuild": "0.25.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "globals": "^17.0.0",
    "prettier": "^3.8.0",
    "typescript": "^5.3.0",
    "vite": "^7.3.1"
  }
}
